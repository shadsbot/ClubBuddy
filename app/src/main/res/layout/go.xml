<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/thingy"
    android:background="#ff6069ff"
    android:weightSum="1">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I&apos;m home, exit session"
        android:id="@+id/button_home"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button_exit"
        android:layout_alignStart="@+id/button_checkup"
        android:layout_marginTop="78dp"
        android:background="@drawable/roundbutton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView5"
        android:background="@drawable/roundbutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check Up On Friends"
        android:id="@+id/button_checkup"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button_home"
        android:layout_centerHorizontal="true"
        android:onClick="openGMaps"
        android:layout_row="7"
        android:layout_column="11"
        android:background="@drawable/roundbutton" />

    <TextView
        android:layout_width="38dp"
        android:layout_height="95dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Menu"
        android:id="@+id/button_exit"
        android:layout_gravity="center_horizontal"
        android:layout_row="9"
        android:layout_column="11"
        android:background="@drawable/roundbutton" />

    <TextView
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:layout_weight="0.48" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PANIC"
        android:id="@+id/button_panic"
        android:layout_gravity="center_horizontal"
        android:layout_row="10"
        android:layout_column="11"
        android:background="@drawable/roundbutton" />

</LinearLayout>